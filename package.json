{
  "name": "ux-testing-platform",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm --parallel -r run dev",
    "dev:api": "pnpm --filter @ux-testing/api dev",
    "dev:web": "pnpm --filter @ux-testing/web dev",
    "build": "pnpm -r run build",
    "db:generate": "pnpm --filter @ux-testing/db generate",
    "db:push": "pnpm --filter @ux-testing/db push",
    "db:studio": "pnpm --filter @ux-testing/db studio",
    "test:agent": "pnpm --filter @ux-testing/api test:agent",
    "lint": "pnpm -r run lint",
    "clean": "pnpm -r run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@9.14.2",
  "dependencies": {
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-slot": "^1.2.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.27.1",
    "lucide-react": "^0.562.0",
    "tailwind-merge": "^3.4.0"
  }
}
