# Example terraform.tfvars file
# Copy to terraform.tfvars and fill in your values

# AWS Region
aws_region = "us-east-1"

# Application settings
app_name      = "uxagent"
environment   = "production"
desired_count = 1

# Resource allocation (adjust based on usage)
cpu    = 512   # 0.5 vCPU
memory = 1024  # 1 GB RAM

# Container settings
container_port    = 8000
health_check_path = "/progress"
image_tag         = "latest"

# Existing cluster from API deployment
existing_cluster_name = "ux-testing-api-cluster"

# Domain configuration
domain_name    = "useswarm.co"
uxagent_domain = "uxagent.useswarm.co"

# BrowserBase credentials (required)
browserbase_api_key    = "your_browserbase_api_key"
browserbase_project_id = "your_browserbase_project_id"

# Gemini API key (required)
gemini_api_key = "your_gemini_api_key"

# Additional environment variables (optional)
env_vars = {
  # Add any extra env vars here
  # "DEBUG" = "true"
}
